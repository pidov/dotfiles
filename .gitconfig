[user]
  name = Ivan Pidov
  email = ivan.pidov@gmail.com
[alias]
  prune = fetch --prune
  co = checkout
  ci = commit
  glog = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
[merge]
  ff = only
  conflictstyle=diff3
[core]
  editor = vim
[push]
  default = simple
  followTags=true
[status]
  showUntrackedFiles = all
[transfer]
  fsckobjects = true
[diff]
  tool = icdiff
[difftool]
  prompt=false
[difftool "icdiff"]
  cmd = /usr/bin/icdiff --line-numbers $LOCAL $REMOTE

