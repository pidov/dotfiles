folder-hook 'account.com.outlook.ivan.pidov' 'source ~/.mutt/account.com.outlook.ivan.pidov'

# source ~/.config/theme/dracula.muttrc

# Default account
source ~/.mutt/account.com.outlook.ivan.pidov
set header_cache="~/.mutt/header_cache"
# Fetch mail shortcut
bind index G imap-fetch-mail
set new_mail_command="notify-send 'New email' '%n new messages, %u unread.' &"
auto_view text/html
alternative_order text/enriched text/plain text/html text

